{% extends 'base.html.twig' %}

{% block title %}Admin Login - {{ parent() }}{% endblock %}

{% block body %}
<div class="card" style="max-width: 400px; margin: 2rem auto;">
    <h2 style="text-align: center;">Admin Login</h2>

    {% if error %}
        <div class="alert alert-error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Passwort:</label>
            <input type="password" id="password" name="_password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-success" style="width: 100%;">
            Anmelden
        </button>
    </form>

    <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #ddd;">
        <p style="color: #666; margin: 0;">Eltern?</p>
        <a href="{{ path('parent_login') }}" class="btn" style="margin-top: 0.5rem;">Zum Eltern-Login</a>
    </div>
</div>
{% endblock %}
